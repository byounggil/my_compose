{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "request": "launch",
            "type": "debugpy",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8003"
            ],
            "cwd": "${workspaceFolder}/backend",
            // "python": "${workspaceFolder}/backend/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            // "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal"
        }
    ]
}